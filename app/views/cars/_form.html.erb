<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :horsepower %><br />
    <%= f.text_field :horsepower %>
  </div>
  <div class="field">
    <%= f.label :number_plate %><br />
    <%= f.text_field :number_plate %>
  </div>
  <div class="field">
    <%= f.label :register_date %><br />
    <%= f.date_select :register_date , :start_year => Date.today.year - @car.max_car_age, :end_year => Date.today.year %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.select :country, @car.available_countries %>
  </div>
  <div class="field">
    <%= f.label :owner %><br />
    <%= f.text_field :owner %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
